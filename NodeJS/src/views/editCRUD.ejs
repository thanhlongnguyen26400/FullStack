<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit CRUD</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>
    <div class="container">
        <form action="/update-crud" method="POST">
            <div class="form-row mt-5">
                <div class="form-group col-md-12">
                    <h1>Update User #<%= userData.id %>
                    </h1>
                </div>
            </div>
            <div class="form-group">
                <label for="inputAddress">First name</label>
                <input type="text" class="form-control" name="firstName" placeholder="First name"
                    value="<%= userData.firstName %>">
            </div>
            <div class="form-group">
                <label for="inputAddress2">Last name</label>
                <input type="text" class="form-control" name="lastName" placeholder="Last name"
                    value="<%= userData.lastName %>">
            </div>
            <div class="form-group">
                <label for="inputAddress2">Address</label>
                <input type="text" class="form-control" name="address" placeholder="Vd: Hải Phòng.."
                    value="<%= userData.address %>">
            </div>
            <input name="id" value="<%= userData.id %>" type="text" hidden />

            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</body>

</html>